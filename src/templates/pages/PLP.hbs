          <span aria-hidden="true" class="icon-star-outline"></span>
          <span aria-hidden="true" class="icon-star-outline"></span>
          <span aria-hidden="true" class="icon-star-outline"></span>
          <span aria-hidden="true" class="icon-star-outline"></span>
          <span aria-hidden="true" class="icon-star-outline"></span>
        </div>
        <br>
               {{#if this.price.special}}
        <strike class="price-tag-plp inline">${{this.price.regular}}.00</strike>
        <p class="special-price-tag-plp inline">${{this.price.special}}.00</p>
        {{else}}
             <p class="price-tag-plp inline">${{this.price.regular}}.00</p>
        {{/if}}
       
        <br>
          <div class="inline-group mb-1">
              <span aria-hidden="true" class="circle" style="background-color:{{this.colors.0.code}}"></span>
